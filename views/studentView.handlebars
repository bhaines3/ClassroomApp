                                            <label for="new-hw-title">Link:</label>
                                            <input type="text" id="hw_title" name="new-class-name" maxlength="30">
                                            <br>
                                            <label for="new-hw-dueDate">Comment:</label>
                                            <input type="text" id="hw_dueDate" name="new-class-desc" maxlength="500">
                                            </br>
                                            <button data-classid=""class="btn btn-outline-info badge-pill" type="submit" id="submitHw">Submit<i class="far fa-check-circle"></i></button>
                                            <br>
                                            <span id="cannot-create-error"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                    
                <div class="modal-footer">
                    <a id = "close" class="btn btn-md" role="button" data-dismiss="modal">Close</a>
                </div>
            </div>
        </div>
    </div>
    <!--Main body of page-->
    <div id="mainContainer">
        <h1>Class:</h1>
        <h3>Student:</h3>
       
        <button class="btn btn-info badge-pill crteClass col-sm-12 col-md-6 col-lg-4" type="button" data-toggle="modal" data-target="#postHwModal">Add Assignment</button>
        <button class="btn btn-info badge-pill crteClass col-sm-12 col-md-6 col-lg-4" type="button" data-toggle="modal" data-target="#allHwModal">View All Assignments</button> 
