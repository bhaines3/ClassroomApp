<div class="container-fluid">
    <div class="row d-flex d-md-block flex-nowrap wrapper">
        <div class="col-md-3 sidebarWidth float-left col-1 pl-0 pr-0 collapse width" id="sidebar">
            <div class="list-group border-0 card text-center text-md-left">
                <a href="/welcome/{{currentStudent.Students.[0].username}}" class="list-group-item d-inline-block collapsed homeBtn" data-parent="#sidebar"><i class="fa fa-home"></i> <span class="d-none d-md-inline sidebarNames">Home</span> </a>
                <a href="#" class="list-group-item d-inline-block collapsed" data-parent="#sidebar"><i class="fa fa-film"></i> <span class="d-none d-md-inline sidebarNames">Item 2</span></a>
				<a href="#menu3" class="list-group-item d-inline-block collapsed" data-toggle="collapse" data-parent="#sidebar" aria-expanded="false"><i class="fa fa-book"></i> <span class="d-none d-md-inline sidebarNames">Resources</span></a>
                <div class="collapse" id="menu3">
                    <a href="https://github.com/" target="_blank" class="list-group-item" data-parent="#menu3">GitHub</a>
                    <a href="https://stackoverflow.com/" target="_blank" class="list-group-item" data-parent="#menu3">Stack Overflow</a>
                    <a href="https://google.com/" target="_blank" class="list-group-item" data-parent="#menu3">Google</a>
					<a href="https://slack.com/" target="_blank" class="list-group-item" data-parent="#menu3">Slack</a>
                    <a href="https://youtube.com/" target="_blank" class="list-group-item" data-parent="#menu3">Youtube</a>
                    <a href="https://www.wikipedia.org/" target="_blank" class="list-group-item" data-parent="#menu3">Wiki</a>
                </div>
                <a href="/" class="list-group-item d-inline-block collapsed" data-parent="#sidebar"><i class="fa fa-sign-out"></i> <span class="d-none d-md-inline sidebarNames">Logout</span></a>
            </div>
        </div>

		<a href="#" data-target="#sidebar" data-toggle="collapse"><i class="fa fa-bars fa-2x py-2 p-1 m-2 ml-5"></i></a>
        <main class="col-md-12 col px-5 pl-md-3 pt-2 main">
                <!--Main body of page-->
                <div id="userInfo" class="text-capitalize container-fluid text-center">
                    <h1>{{currentStudent.classname}}</h1>
                    <h8>Instructor: {{currentStudent.Teacher.name}}</h8>
                    <h6>Student: {{currentStudent.Students.[0].name}}</h6>
                </div>
                <div id="mainContainer"class="container-fluid text-center">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12 wrapper classes">
                            <div class="container-fluid" id="classesTeaching">
                                <div class="card text-white border-white mb-3 mx-auto" style="max-width: 60rem; opacity: .80">
                                    <div class="card-header">
                                        <h3>Assignments</h3>
                                    </div>
                                    <div class="card-body">
                                        {{#each currentStudent.Homework}}
                                        {{!-- <div id="accordion" role="tablist" aria-multiselectable="true"> --}}
                                        <div class="modal fade" id="{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                <div class="modal-header">
                                                    <h3 class="modal-title" id="modal-title">{{this.homeworkname}}</h3>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                </div>
                                                <div class="modal-body">
                                                    {{this.homeworkdesc}}
                                                    <div class="form-group text-white">
                                                        <label for="new-hw-title">Submit Link:</label>
                                                        <input class="col-md-8" type="text" id="hw_title" name="new-class-name" maxlength="30">
                                                        <br>
                                                        <label for="new-hw-dueDate">Comment:</label>
                                                        <textarea class="form-control col-md-10 mx-auto" id="hw_dueDate" name="new-class-desc" rows="3" maxlength="500"></textarea>
                                                        </br>
                                                        <button data-classid="{{currentStudent.id}}"class="btn btn-outline-light badge-pill" type="submit" id="submitHw">Submit<i class="far fa-check-circle"></i></button>
                                                        <br>
                                                        <span id="cannot-create-error"></span>
                                                    </div>
                                                </div>
                                                    <div class="modal-footer">
                                                        <a id = "close" class="btn btn-md" role="button" data-dismiss="modal">Close</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                            <div class="card hwSubmission">
                                                <div class="card-header" role="tab" id="headingOne">
                                                    <h5 class="mb-0">
                                                       <button class="hw" type="button" data-toggle="modal">{{this.homeworkname}}</button> 
                                                    </h5>
                                                </div>
                                            </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div> 
                        <!--<div>Attendance</div>-->
                    </div>
                </div>
        </main>
    </div>
</div>
