<div class="modal fade" id="new-class" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h3 class="modal-title" id="modal-title">Create a new class!</h3>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="form-group">
	                <label for="new-class-name">Name of Class:</label>
	                <input type="text" id="new-class-name" name="new-class-name" maxlength="30">
	                <br>
	                <label for="new-class-desc">Class Description:</label>
	                <input type="text" id="new-class-desc" name="new-class-desc" maxlength="500">
	                </br>
	                <button class="btn btn-outline-primary" type="submit" id="create-new-class">Create<i class="far fa-check-circle"></i></button>
	                <br>
	                <span id="cannot-create-error"></span>
	            </div>
			</div>
			<div class="modal-footer">
				<a id = "close" class="btn btn-md" role="button" data-dismiss="modal">Close</a>
			</div>
		</div>
	</div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 id="mainHeading">Welcome {{userInfo.name}}</h1>
        </div>
    </div>
    <div class="row">
        <div id="classesTeaching"class="col-lg-9">
            <h3>You are Teaching:</h3>
            <ul>
                {{#each userInfo.classTables}}
					{{#if this.classname}}
                		<li>{{this.classname}}</li>
                		<button class="classPg" data-user="{{userInfo.username}}">Class Page</button>
					{{else}}
						<span>You are currently not teaching any classes.</span>
					{{/if}}
				{{/each}}
            </ul>
        </div>
		<div id="createnewclass"class="col-lg-3">
            <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#new-class">Create a class</button>
		</div>
	</div>
	<div class="row">
        <div id="classesAvailable" class="col-lg-12">
			<h3 id="mainHeading">Enroll in a New Class</h1>
			<ul>
				{{#each classInfo}}
                	<li>{{this.classdesc}}</li>
					<button class="Enroll">Enroll</button>
					<button class="Description">Description</button>
				{{/each}}
			</ul>
        </div>
    </div>
</div>